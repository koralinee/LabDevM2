<div class="container-fluid">
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">SISTEMA WEB </a>
            <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Cadastrar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page"
                            href="/consulta">Consultar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {{#with posts}}
            <form action="/editar/{{id}}" method="post" class="container mx-auto col">
                <p class="text-start fs-5 mt-3">Editar - Agendamento de Potenciais Clientes</p>
                <p class="text-start fs-6">Sistema utilizado para agendamento de serviços</p>  
                <div class="col gap-3 my-3 d-flex flex-column">
                    <div class="col">
                        <div class="col">
                            Nome:
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" id="nome" name="nome" value="{{nome}}">
                        </div>
                    </div>
                    <div class="mb-3 text-start">
                                <label class="form-label">Telefone:</label>
                                <input type="number" name="telefone" class="form-control" id="telefone" placeholder="(00)00000-0000" value="{{telefone}}">
                            </div>
                            <div class="mb-3 text-start">
                                <label class="form-label">Origem:</label>
                                <select name="origem" class="form-select" aria-label="Default select example">
                                    <option value="celular" {{#if (eq origem 'celular' )}}selected{{/if}}>Celular</option>
                                    <option value="whatsapp" {{#if (eq origem 'whatsapp' )}}selected{{/if}}>Whatsapp</option>
                                    <option value="telefone_fixo" {{#if (eq origem 'telefone_fixo' )}}selected{{/if}}>Telefone Fixo
                                    </option>
                                </select>
                            </div>
                            <div class="mb-3 text-start">
                                <label class="form-label">Data do Contato:</label>
                                <input type="date" name="data_contato" class="form-control" id="data_contato"
                                    aria-describedby="emailHelp" value="{{data_contato}}">
                            </div>
                            <div class="mb-3 text-start">
                                <label class="form-label">Observação:</label>
                                <textarea name="observacao" class="form-control" placeholder="" id="observacao"
                                    style="height: 100px">{{observacao}}</textarea>
                            </div>
                    <div class="col">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                    </div>
                </div>  
            </form>
    {{/with}}
</div>