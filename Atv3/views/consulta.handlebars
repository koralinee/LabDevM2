<div class="container-fluid justify-content-center">
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">SISTEMA WEB</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Cadastrar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/consulta">Consultar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="row container">
        <div class="col"> &nbsp; </div>
    </div>
    <div class="row container mx-auto">
        <div class="col bg-white">
            <p class="text-start fs-5">Consultas agendadas</p>
            <p class="text-start fs-6">Sistema utilizado para agendamento de serviços</p>
            <div class="container text-center">
                <div class="row bg-primary">
                    <div class="col py-2 text-light">Nome</div>
                    <div class="col py-2 text-light">Celular</div>
                    <div class="col py-2 text-light">Origem</div>
                    <div class="col py-2 text-light">Data do Contato</div>
                    <div class="col py-2 text-light">Ações</div>
                </div>
                {{#each posts}}
                <div class="row border align-items-center">
                    <div class="col py-2 text-blue">{{nome}}</div>
                    <div class="col py-2 text-blue">{{celular}}</div>
                    <div class="col py-2 text-blue">{{origem}}</div>
                    <div class="col py-2 text-blue">{{data_contato}}</div>
                    <div class="col py-2 text-blue">
                        <a href="/editar/{{id}}" class="btn btn-primary">Editar</a>
                        <a href="/excluir/{{id}}" class="btn btn-danger">Excluir</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
